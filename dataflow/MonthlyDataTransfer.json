{
	"name": "MonthlyDataTransfer",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"name": "sourceMonthlyExcelFile"
				}
			],
			"sinks": [
				{
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "SelectRelevantColumnsAndRename"
				},
				{
					"name": "typeTransform"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Store as string,",
				"          {Yr Make Model} as string,",
				"          Miles as string,",
				"          Customer as string,",
				"          {Sales ()} as string,",
				"          Date as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false) ~> sourceMonthlyExcelFile",
				"sourceMonthlyExcelFile select(mapColumn(",
				"          Store,",
				"          YrMakeModel = {Yr Make Model},",
				"          Miles,",
				"          Customer,",
				"          Sales = {Sales ()},",
				"          Date",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SelectRelevantColumnsAndRename",
				"SelectRelevantColumnsAndRename derive(Sales = toInteger(Sales),",
				"          Date = addDays(toDate('1900-01-01'), toInteger(Date) - 2)) ~> typeTransform",
				"typeTransform sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          Store,",
				"          YrMakeModel,",
				"          Customer,",
				"          Sales",
				"     ),",
				"     format: 'table') ~> sink1"
			]
		}
	}
}